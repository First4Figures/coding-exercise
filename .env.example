# Environment Configuration Template
# Copy this file to .env and update values as needed

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=collectibles_db
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration (optional - for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT_MS=5000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Shipping Configuration
DEFAULT_CURRENCY=USD
DEFAULT_SHIPPING_WEIGHT_THRESHOLD=2.0
DEFAULT_SHIPPING_COST_DOMESTIC=15.00
DEFAULT_SHIPPING_COST_INTERNATIONAL=35.00

# Business Rules
LOW_STOCK_PERCENTAGE=0.10
INVENTORY_RESERVE_MINUTES=15
MAX_ITEMS_PER_ORDER=10

# External Services (if needed for bonus features)
# EXCHANGE_RATE_API_KEY=your_api_key_here
# EMAIL_SERVICE_API_KEY=your_email_api_key_here

# Security
JWT_SECRET=your_jwt_secret_for_bonus_auth
BCRYPT_ROUNDS=12

# Rate Limiting (bonus feature)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Development/Testing
ENABLE_CORS=true
ENABLE_REQUEST_LOGGING=true
MOCK_EXTERNAL_SERVICES=true